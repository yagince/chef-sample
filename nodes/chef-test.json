{
    "users": [
        { "name": "yagi", "group": "deploy"},
        { "name": "deploy", "group": "deploy"}
    ],
    "authorization": {
        "sudo": {
            "groups": ["vagrant", "deploy"],
            "users": ["vagrant", "deploy", "yagi"],
            "passwordless": true,
            "sudoers_defaults": [
                "env_reset",
                "mail_badpass",
                "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\""
            ]
        }
    },
    "nginx":{
        "version": "1.4.1",
        "install_method": "source",
        "source": {
            "version": "1.4.1"
        },
        "port" : 80,
        "worker_processes": 2
    },
    "run_list":[
        "recipe[users]",
        "recipe[sudo]",
        "recipe[nginx]"
    ]
}
